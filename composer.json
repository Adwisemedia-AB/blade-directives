{
  "name": "adwisemedia/blade-directives",
  "type": "package",
  "license": "MIT",
  "description": "A set of Blade directives for use with Roots Sage.",
  "homepage": "https://github.com/Adwisemedia-AB/blade-directives",
  "authors": [
    {
      "name": "Jan Thore Sjelfjord",
      "email": "jt@adwisemedia.se"
    }
  ],
  "keywords": [
    "roots",
    "sage",
    "wordpress",
    "blade-directives",
    "blade",
    "directives"
  ],
  "support": {
    "issues": "https://github.com/Adwisemedia-AB/blade-directives/issues"
  },
  "autoload": {
    "files": [
      "src/Directives.php",
      "src/Utilities.php"
    ]
  },
  "require": {
    "php": ">=7.1.3"
  },
  "require-dev": {
    "squizlabs/php_codesniffer": "^3.5",
    "illuminate/support": "5.6.*"
  },
  "scripts": {
    "lint": [
      "phpcs --ignore=vendor,tests --extensions=php --standard=PSR12 ."
    ],
    "lint:fix": [
      "phpcbf --ignore=vendor,tests --extensions=php --standard=PSR12 ."
    ]
  }
}
